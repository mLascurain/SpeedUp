{
  "manifest_version": 3,
  "name": "SpeedUp!",
  "version": "1.0.0",
  "description": "A basic extension that allows you to change the speed rate of a HTML5 video",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  // "content_scripts": [
  //   {
  //     "matches": ["<all_urls>"],
  //     "js": ["./main.js"]
  //   }
  // ],
  "action": {
    "default_popup": "index.html"
    },
  "permissions": ["activeTab", "scripting"]
}